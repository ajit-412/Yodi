<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Fragments.Yoga.YogaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yoga_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:fontFamily="monospace"
            android:gravity="center_horizontal|center_vertical"
            android:text="Yoga's View"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/yoga_img"
            android:layout_width="350dp"
            android:layout_height="420dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/yoga_img_view"
            android:padding="7dp"
            android:src="@drawable/setub" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yoga_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="X"
                android:textColor="#1EEA17"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/yog_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="20"
                android:textColor="#1EEA17"
                android:textSize="40sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/yoga_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:text="00:00"
            android:textColor="#EA1717"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_start"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/yoga_view_btn"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="START"
                    android:textColor="@color/black"
                    android:visibility="invisible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/btn_pause"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/yoga_view_btn"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="PAUSE"
                    android:textColor="@color/black"
                    android:visibility="invisible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/btn_finish"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/yoga_view_btn"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="FINISH"
                    android:textColor="@color/black"
                    android:visibility="invisible"
                    tools:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/working_btn"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/yoga_view_btn_start"
                android:gravity="center_vertical|center_horizontal"
                android:text="Start"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
